<?xml version="1.0" encoding="UTF-8"?>

<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
    version="2.0">

    <application>
        <el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
    </application>
 
    <navigation-rule>
        <navigation-case>
            <from-outcome>index</from-outcome>
            <to-view-id>/index.jsf</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>
    
     <navigation-rule>
        <navigation-case>
            <from-outcome>cadastro</from-outcome>
            <to-view-id>/cadastro.jsf</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>
 
    <navigation-rule>
        <navigation-case>
            <from-outcome>successfulPage</from-outcome>
            <to-view-id>/pages/successfulPage.jsf</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>
 
    <navigation-rule>
        <navigation-case>
            <from-outcome>userPage</from-outcome>
            <to-view-id>/pages/user/userPage.jsf</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>
 
    <navigation-rule>
        <navigation-case>
            <from-outcome>adminPage</from-outcome>
            <to-view-id>/pages/admin/adminPage.jsf</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>
</faces-config>
